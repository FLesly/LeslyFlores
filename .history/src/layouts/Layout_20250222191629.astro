---
import "../styles/global.css";
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="min-h-screen flex flex-col bg-white text-black">
		<header class="bg-teal-600 text-white p-4 shadow-md">
			<nav class="container mx-auto flex justify-between items-center">
				<a href="/" class="font-bold text-xl hover:text-pink-300 transition-colors">
					Lesly Flores
				</a>
				<div class="space-x-4">
					<a href="/proyecto" class="hover:text-pink-300 transition-colors">Proyecto</a>
					<a href="/contacto" class="hover:text-pink-300 transition-colors">Escr√≠beme</a>
				</div>
			</nav>
		</header>
		<main class="flex-grow container mx-auto p-4">
			<slot />
		</main>
		<footer class="bg-teal-600 text-white p-4 mt-8">
			<div class="container mx-auto text-center">
				<p>&copy; 2023 Lesly Flores. Todos los derechos reservados.</p>
			</div>
		</footer>
	</body>
</html>

<style>
	html, body {
		margin: 0;
		padding: 0;
		width: 100%;
		height: 100%;
	}
</style>
