---
import Layout from '../layouts/Layout.astro';
import proyectoCard from '../components/proyectoCard.astro';
import "../styles/global.css";

// Lista de proyectos
const proyectoLs = [
  { name: "PetFinder", url: "/pet_finder.png", descripcion: "Logos: HTML, CSS, JavaScript" },
  { name: "Better Than Slice", url: "/bts_mockup.png", descripcion: "Logos: Next.js, TailwindCSS" },
];
---

<Layout title="Proyectos">
    <div class="container mx-auto p-4">
        <h1 class="text-3xl text-pink-500 font-bold mb-6 text-primary">Mis Proyectos</h1>
        <div class="grid grid-cols-1 md:grid-cols-1 lg:grid-cols-1 gap-6">
            <!-- Pasamos los proyectos como prop -->
            <proyectoCard proyectos={proyectoLs} />
        </div>
    </div>
</Layout>
