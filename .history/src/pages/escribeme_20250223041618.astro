---
import Layout from '../layouts/Layout.astro';
import "../styles/global.css";
---

<Layout title="Escríbeme - Lesly Flores">
    <div class="container mx-auto p-4">
        <div class="max-w-4xl mx-auto bg-white bg-opacity-20 backdrop-filter backdrop-blur-lg rounded-xl shadow-lg overflow-hidden">
            <div class="md:flex">
                <div class="md:flex-shrink-0">
                    <img
                        src="/lesly3.jpg?height=400&width=300" 
                        alt="Lesly Flores" 
                        width={300} 
                        height={400}
                        class="h-full w-full object-cover md:w-48"
                    />
                </div>
                <div class="p-8">
                    <div class="uppercase tracking-wide text-sm text-accent font-semibold">Contáctame</div>
                    <h1 class="mt-2 text-3xl leading-8 font-extrabold tracking-tight text-primary">Lesly Flores</h1>
                    <p class="mt-2 text-xl text-gray-500">Diseñadora y Desarrolladora Web</p>
                    
                    <div class="mt-6 space-y-4">
                        <div class="flex items-center space-x-3 text-gray-700">
                            <a href="mailto:tu-email@ejemplo.com" class="hover:text-accent transition-colors">tu-email@ejemplo.com</a>
                        </div>
                        <div class="flex items-center space-x-3 text-gray-700">
                            <a href="tel:+1234567890" class="hover:text-accent transition-colors">+1 (234) 567-890</a>
                        </div>
                        <div class="flex items-center space-x-3 text-gray-700">
                            <a href="https://www.linkedin.com/in/tu-perfil" target="_blank" rel="noopener noreferrer" class="hover:text-accent transition-colors">LinkedIn</a>
                        </div>
                        <div class="flex items-center space-x-3 text-gray-700">
                            <a href="https://github.com/tu-usuario" target="_blank" rel="noopener noreferrer" class="hover:text-accent transition-colors">GitHub</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</Layout>

<style>
    @keyframes fadeIn {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }

    .container > div {
        animation: fadeIn 0.5s ease-out;
    }
</style>

