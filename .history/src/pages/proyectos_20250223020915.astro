---
import Layout from '../layouts/Layout.astro';
import "../styles/global.css";
---

<Layout title="Proyectos">
    <div class="container mx-auto p-4">
        <h1 class="text-3xl font-bold mb-6 text-primary">Mis Proyectos</h1>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <!-- Aquí puedes agregar tus proyectos -->
            <div class="bg-white shadow-md rounded-lg overflow-hidden">
                <img src="/placeholder.svg?height=200&width=300" alt="Proyecto 1" class="w-full h-48 object-cover" />
                <div class="p-4">
                    <h2 class="text-xl font-semibold mb-2">Proyecto 1</h2>
                    <p class="text-gray-600">Descripción breve del proyecto 1.</p>
                    <a href="#" class="mt-4 inline-block text-accent hover:underline">Ver más</a>
                </div>
            </div>
            <div class="bg-white shadow-md rounded-lg overflow-hidden">
                <img src="/placeholder.svg?height=200&width=300" alt="Proyecto 2" class="w-full h-48 object-cover" />
                <div class="p-4">
                    <h2 class="text-xl font-semibold mb-2">Proyecto 2</h2>
                    <p class="text-gray-600">Descripción breve del proyecto 2.</p>
                    <a href="#" class="mt-4 inline-block text-accent hover:underline">Ver más</a>
                </div>
            </div>
            <!-- Puedes agregar más proyectos siguiendo esta estructura -->
        </div>
    </div>
</Layout>